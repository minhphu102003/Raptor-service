{
  "info": {
    "name": "RAPTOR Service API",
    "description": "Collection for testing RAPTOR Service APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Document APIs",
      "item": [
        {
          "name": "Ingest Markdown Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Dataset-Id",
                "value": "ds_demo",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/your/document.md"
                },
                {
                  "key": "dataset_id",
                  "value": "ds_demo",
                  "type": "text"
                },
                {
                  "key": "source",
                  "value": "https://example.com/document.md",
                  "type": "text"
                },
                {
                  "key": "tags",
                  "value": "docs",
                  "type": "text"
                },
                {
                  "key": "tags",
                  "value": "markdown",
                  "type": "text"
                },
                {
                  "key": "extra_meta",
                  "value": "{\"category\":\"guide\"}",
                  "type": "text"
                },
                {
                  "key": "build_tree",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "summary_llm",
                  "value": "deepseek_v3",
                  "type": "text"
                },
                {
                  "key": "vector_index",
                  "value": "hnsw_cosine",
                  "type": "text"
                },
                {
                  "key": "upsert_mode",
                  "value": "upsert",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/v1/document/ingest-markdown",
              "host": ["{{base_url}}"],
              "path": ["v1", "document", "ingest-markdown"]
            }
          },
          "response": []
        },
        {
          "name": "Retrieve Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dataset_id\": \"ds_demo\",\n  \"query\": \"Hướng dẫn cài đặt hệ thống\",\n  \"mode\": \"collapsed\",\n  \"top_k\": 5,\n  \"expand_k\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/document/retrieve",
              "host": ["{{base_url}}"],
              "path": ["v1", "document", "retrieve"]
            }
          },
          "response": []
        },
        {
          "name": "Answer Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dataset_id\": \"ds_demo\",\n  \"query\": \"Hướng dẫn cài đặt hệ thống\",\n  \"mode\": \"collapsed\",\n  \"top_k\": 5,\n  \"answer_model\": \"DeepSeek-V3\",\n  \"temperature\": 0.7,\n  \"max_tokens\": 2000\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/document/answer",
              "host": ["{{base_url}}"],
              "path": ["v1", "document", "answer"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Dataset APIs",
      "item": [
        {
          "name": "List Datasets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/datasets",
              "host": ["{{base_url}}"],
              "path": ["v1", "datasets"]
            }
          },
          "response": []
        },
        {
          "name": "Get Dataset Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/datasets/ds_demo",
              "host": ["{{base_url}}"],
              "path": ["v1", "datasets", "ds_demo"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Assistant APIs",
      "item": [
        {
          "name": "Create Assistant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Trợ lý tài liệu\",\n  \"description\": \"Trợ lý giúp trả lời câu hỏi về tài liệu\",\n  \"knowledge_bases\": [\"ds_demo\"],\n  \"model_settings\": {\n    \"model\": \"DeepSeek-V3\",\n    \"temperature\": 0.7,\n    \"topP\": 1.0,\n    \"presencePenalty\": 0.0,\n    \"frequencyPenalty\": 0.0\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/ai/assistants",
              "host": ["{{base_url}}"],
              "path": ["v1", "ai", "assistants"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Chat APIs",
      "item": [
        {
          "name": "Create Chat Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dataset_id\": \"ds_demo\",\n  \"title\": \"Phiên chat tài liệu\",\n  \"assistant_config\": {\n    \"model\": \"DeepSeek-V3\",\n    \"temperature\": 0.7,\n    \"max_tokens\": 4000,\n    \"top_k\": 5,\n    \"mode\": \"tree\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/datasets/chat/sessions",
              "host": ["{{base_url}}"],
              "path": ["v1", "datasets", "chat", "sessions"]
            }
          },
          "response": []
        },
        {
          "name": "Send Chat Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dataset_id\": \"ds_demo\",\n  \"query\": \"Hướng dẫn cài đặt hệ thống\",\n  \"session_id\": \"s1a2b3c4-d5e6-f7g8-h9i0-j1k2l3m4n5o6\",\n  \"mode\": \"tree\",\n  \"top_k\": 5,\n  \"answer_model\": \"DeepSeek-V3\",\n  \"temperature\": 0.7\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/datasets/chat/chat",
              "host": ["{{base_url}}"],
              "path": ["v1", "datasets", "chat", "chat"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    }
  ]
}
